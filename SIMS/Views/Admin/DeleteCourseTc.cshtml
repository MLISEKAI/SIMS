@model SIMS.Courses

@{
    ViewData["Title"] = "Delete Course";
}

<h1>Delete Course</h1>

<h3>Are you sure you want to delete this course?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Course Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course_Name)
        </dd>
        <dt class="col-sm-2">
            Course Code
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course_code)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="DeleteCourseTc" asp-route-id="@Model.Course_ID" asp-route-teacherId="@ViewData["TeacherId"]">
        <input type="hidden" asp-for="Course_ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="CoursesTc" asp-route-id="@ViewData["TeacherId"]">Back to Courses</a>
    </form>
</div>
