@model IEnumerable<SIMS.Teachers>

@{
    ViewData["Title"] = "Index";
}

<h1>Teacher Info</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Teacher_ID</td>
                <td>@item.Teacher_Name</td>
                <td>@item.DateOfBirth.ToShortDateString()</td>
                <td>@item.Address</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>
                    <a asp-action="EditTc" asp-route-id="@item.Teacher_ID">Edit</a> |
                    <a asp-action="DetailsTc" asp-route-id="@item.Teacher_ID">Details</a> |
                    <a asp-action="DeleteTc" asp-route-id="@item.Teacher_ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<form asp-controller="Admin" asp-action="Home" method="post" class="form-inline">
    <button type="submit" class="btn bg-primary">Back to home</button>
</form>

