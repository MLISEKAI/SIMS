@model SIMS.Students

@{
    ViewData["Title"] = "Details";
}

<h1>Details Student</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student_Name)
        </dd>
        <dt class="col-sm-2">
            Date Of Birth
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            Phone
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <h2>Enrolled Courses</h2>
    @if (Model.Students_Courses != null && Model.Students_Courses.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Course Code</th>
                    <th>Course Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var studentCourse in Model.Students_Courses)
                {
                    <tr>
                        <td>@studentCourse.Course.Course_code</td>
                        <td>@studentCourse.Course.Course_Name</td>
                        <td>@studentCourse.Course.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No courses enrolled.</p>
    }
</div>
<div>
    <a asp-action="EditSt" asp-route-id="@Model?.Student_ID">Edit</a> |
    <a asp-action="CoursesSt" asp-route-id="@Model?.Student_ID">Enroll in Courses</a> |
    <a asp-action="St">Back to List</a>
</div>