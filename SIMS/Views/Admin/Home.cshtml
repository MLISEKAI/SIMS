@{
    ViewData["Title"] = "Home";
}
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Home">Student Management</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">User Account</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="St">Student</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Tc">Teacher</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Scores" asp-action="Index">Scores</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Student Name</th>
                    <th>Date of Birth</th>
                    <th>Address</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Course</th>
                    <th>Score</th>
                    <th>Grade</th>
                </tr>
            </thead>
            <tbody>
                <!-- Thêm các dòng dữ liệu ở đây -->
            </tbody>
        </table>

        <div class="d-flex justify-content-end">
            <form asp-controller="Account" asp-action="Login" class="form-inline">
                <button type="submit" class="btn btn-primary">Add</button>
            </form>
            <form asp-controller="Account" asp-action="Login" class="form-inline mx-2">
                <button type="submit" class="btn btn-secondary">Edit</button>
            </form>
            <form asp-controller="Account" asp-action="Login" class="form-inline">
                <button type="submit" class="btn btn-secondary">Details</button>
            </form>
            <form asp-controller="Account" asp-action="Login" class="form-inline mx-2">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <form asp-controller ="Account" asp-action="Login" class="form-inline">
                <button type="submit" class="btn btn-info">Import Data</button>
            </form>
                <form asp-controller ="Account" asp-action="Login" class="form-inline mx-2">
                <button type="submit" class="btn btn-info">Export Data</button>
            </form>
        </div>
    </main>
    <form asp-controller="Account" asp-action="Login" method="post" class="form-inline">
        <button type="submit" class="btn bg-primary">Logout</button>
    </form>
</div>
<footer class="border-top footer text-muted">
    
</footer>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}